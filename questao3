    <title>JavaScript</title>
    <meta name="author" content="Esli Janai">
    <meta name="keywords" content="JavaScript">
    <meta name="description" content="Atividade sobre JavaScript">
</head>
<body>
    <script>
        // Função que mostra a tabuada de um número
        function mostrarTabuada() {
            var numero = prompt("Digite um número para a tabuada:");
            numero = parseInt(numero);

            if (isNaN(numero)) {
                alert("Por favor, digite um número válido.");
            } else {
                var tabuada = "";
                for (var i = 1; i <= 10; i++) {
                    var resultado = numero * i;
                    tabuada += numero + " x " + i + " = " + resultado + "\n";
                }
                alert("Tabuada de " + numero + ":\n" + tabuada);
            }
        }

        mostrarTabuada(); // Chama a função
    </script>
</body>
</html>
